.history {
  background: #fff;
  border-radius: 10rpx;
  padding-top: 10rpx;
  min-height: 400rpx;
  width: 100%;
}

.hotBox .hot .title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}
.hotBox .hot .box {
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 0rpx;
}


.options {
  width: 94%;
  margin: 3%;
  color: #000;
  background-color: #fff;
}
.options image {
  float: right;
  width: 44rpx;
  height: 42rpx;
  margin-right: 20rpx;
}

.options text:last-child {
  color: #1268bb;
  float: right;
}

.options .item {
  padding: 0.2rem 0.5rem;
  background-color: #eee;
  float: left !important;
  color: #565656 !important;
  border-radius: 0.1rem;
  margin: 3%;
}

